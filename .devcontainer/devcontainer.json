{
  "name": "Share Dish - Full Stack",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "initializeCommand": "git config --global user.name \"${localEnv:GITHUB_USER:-GitHub User}\" && git config --global user.email \"${localEnv:GITHUB_EMAIL:-user@example.com}\"",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "mongodb.mongodb-vscode"
      ],
      "settings": {
        "typescript.preferences.includePackageJsonAutoImports": "on",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },

  "forwardPorts": [3000, 5000],
  "portsAttributes": {
    "3000": {
      "label": "Frontend (React)",
      "onAutoForward": "notify"
    },
    "5000": {
      "label": "Backend (Node.js)",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "node setup-auto.js",

  "remoteUser": "node",
  
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/node_modules,target=/workspaces/share-dish-Anubis/node_modules,type=bind,consistency=cached"
  ]
} 